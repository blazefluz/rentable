<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Equipment Catalog</h1>
      <p class="text-gray-600 mt-2">Browse our collection of professional equipment</p>
    </div>
    <%= link_to new_product_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition" do %>
      + Add Product
    <% end %>
  </div>

  <!-- Search & Filter -->
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <%= form_with url: products_path, method: :get, class: "flex gap-4", data: { turbo_frame: "products" } do |f| %>
      <div class="flex-1">
        <%= f.text_field :query, value: params[:query], placeholder: "Search products...", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.select :category, options_for_select(@categories, params[:category]), { include_blank: "All Categories" }, class: "px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500" %>
      </div>
      <%= f.submit "Search", class: "bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 cursor-pointer" %>
    <% end %>
  </div>

  <!-- Products Grid -->
  <%= turbo_frame_tag "products" do %>
    <% if @products.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @products.each do |product| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
            <!-- Product Image Placeholder -->
            <div class="h-48 bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center">
              <% if product.images.attached? %>
                <%= image_tag product.images.first, class: "w-full h-full object-cover" %>
              <% else %>
                <svg class="w-16 h-16 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              <% end %>
            </div>

            <!-- Product Info -->
            <div class="p-4">
              <div class="flex justify-between items-start mb-2">
                <h3 class="text-lg font-semibold text-gray-900"><%= product.name %></h3>
                <% if product.category %>
                  <span class="bg-indigo-100 text-indigo-800 text-xs px-2 py-1 rounded-full"><%= product.category %></span>
                <% end %>
              </div>

              <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= product.description %></p>

              <div class="flex justify-between items-center">
                <div>
                  <span class="text-2xl font-bold text-indigo-600"><%= product.daily_price.format %></span>
                  <span class="text-gray-500 text-sm">/day</span>
                </div>
                <div class="text-sm text-gray-500">
                  Qty: <span class="font-semibold"><%= product.quantity %></span>
                </div>
              </div>

              <%= link_to product_path(product), class: "mt-4 w-full bg-indigo-600 text-white text-center py-2 rounded-lg hover:bg-indigo-700 transition block" do %>
                View Details
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="mt-8 flex justify-center">
        <%== pagy_nav(@pagy) if defined?(@pagy) %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No products found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by adding a new product.</p>
        <%= link_to new_product_path, class: "mt-6 inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" do %>
          + Add Product
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
