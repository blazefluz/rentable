<div class="max-w-4xl mx-auto">
  <%= link_to products_path, class: "text-indigo-600 hover:text-indigo-800 mb-4 inline-block" do %>
    ‚Üê Back to Products
  <% end %>

  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="md:flex">
      <!-- Product Image -->
      <div class="md:w-1/2 bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center p-8">
        <% if @product.images.attached? %>
          <%= image_tag @product.images.first, class: "w-full h-auto rounded-lg" %>
        <% else %>
          <svg class="w-32 h-32 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        <% end %>
      </div>

      <!-- Product Details -->
      <div class="md:w-1/2 p-8">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @product.name %></h1>
            <% if @product.category %>
              <span class="bg-indigo-100 text-indigo-800 text-sm px-3 py-1 rounded-full"><%= @product.category %></span>
            <% end %>
          </div>
          <div class="flex space-x-2">
            <%= link_to edit_product_path(@product), class: "text-gray-600 hover:text-indigo-600" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            <% end %>
          </div>
        </div>

        <p class="text-gray-600 mb-6"><%= @product.description %></p>

        <!-- Pricing -->
        <div class="border-t border-b border-gray-200 py-4 mb-6">
          <div class="flex justify-between items-center">
            <span class="text-gray-600">Daily Rate</span>
            <span class="text-3xl font-bold text-indigo-600"><%= @product.daily_price.format %></span>
          </div>
        </div>

        <!-- Inventory -->
        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-700 mb-2">Inventory</h3>
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-gray-50 p-3 rounded-lg">
              <div class="text-sm text-gray-600">Total Quantity</div>
              <div class="text-2xl font-bold text-gray-900"><%= @product.quantity %></div>
            </div>
            <div class="bg-green-50 p-3 rounded-lg">
              <div class="text-sm text-gray-600">Available</div>
              <div class="text-2xl font-bold text-green-600"><%= @available_quantity %></div>
            </div>
          </div>
        </div>

        <!-- Additional Info -->
        <% if @product.barcode.present? %>
          <div class="mb-4">
            <span class="text-sm text-gray-600">Barcode:</span>
            <span class="font-mono text-sm"><%= @product.barcode %></span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Availability Check Section -->
    <div class="border-t border-gray-200 p-8 bg-gray-50">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Check Availability</h2>

      <%= form_with url: product_path(@product), method: :get, class: "space-y-4" do |f| %>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= f.label :start_date, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :start_date, value: @start_date, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500" %>
          </div>
          <div>
            <%= f.label :end_date, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :end_date, value: @end_date, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500" %>
          </div>
        </div>
        <%= f.submit "Check Availability", class: "bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 transition cursor-pointer" %>
      <% end %>

      <!-- Availability Result -->
      <div class="mt-6 p-4 bg-white rounded-lg border-2 <%= @available_quantity > 0 ? 'border-green-400' : 'border-red-400' %>">
        <div class="flex items-center">
          <% if @available_quantity > 0 %>
            <svg class="w-6 h-6 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-green-700 font-medium">
              <%= @available_quantity %> unit<%= @available_quantity > 1 ? 's' : '' %> available from <%= @start_date.strftime('%b %d') %> to <%= @end_date.strftime('%b %d, %Y') %>
            </span>
          <% else %>
            <svg class="w-6 h-6 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-red-700 font-medium">
              Not available for the selected dates
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
